<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bunnyxt.tdd.dao.user.UserSignInDao">
    <resultMap id="BaseResultMap" type="com.bunnyxt.tdd.model.user.UserSignIn">
        <id column="id" property="id" />
        <result column="added" property="added" />
        <result column="userid" property="userid" />
    </resultMap>

    <sql id="BaseColumnList">
        id, added, userid
    </sql>

    <select id="queryUserSignIns" resultMap="BaseResultMap">
        select
        <include refid="BaseColumnList" />
        from
        tdd_user_sign_in
        <where>
            <if test="userid > 0">
                and userid = #{userid}
            </if>
            <if test="start_ts > 0">
                and added >= #{start_ts}
            </if>
            <if test="end_ts > 0">
                and added &lt;= #{end_ts}
            </if>
        </where>
        <choose>
            <when test="userid > 0 and last_count > 0">
                order by userid desc limit #{last_count}
            </when>
            <otherwise>
                limit
                #{offset}, #{ps}
            </otherwise>
        </choose>
    </select>

    <select id="queryUserSignInsCount" resultType="Integer">
        select
        count(1)
        from
        tdd_user_sign_in
        <where>
            <if test="userid > 0">
                and userid = #{userid}
            </if>
            <if test="start_ts > 0">
                and added >= #{start_ts}
            </if>
            <if test="end_ts > 0">
                and added &lt;= #{end_ts}
            </if>
        </where>
    </select>

    <select id="queryUserSignInOneDay" resultMap="BaseResultMap">
        select
        <include refid="BaseColumnList" />
        from
        tdd_user_sign_in
        where
        userid = #{userid}
        and
        added >= #{start_ts}
        and
        added &lt;= #{end_ts}
        limit
        1
    </select>

    <insert id="addUserSignIn">
        insert into
        tdd_user_sign_in(added, userid)
        values
        (#{added}, #{userid})
    </insert>

    <select id="queryUserSignInRankInOneDay" resultType="Integer">
        select
        count(1)
        from
        tdd_user_sign_in
        where
        added >= #{start_ts}
        and
        added &lt;= #{end_ts}
        and
        id &lt;= (
            select
            id
            from
            tdd_user_sign_in
            where
            userid = #{userid}
            and
            added >= #{start_ts}
            and
            added &lt;= #{end_ts}
        )
    </select>
</mapper>